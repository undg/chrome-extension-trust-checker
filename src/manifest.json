{
  "manifest_version": 3,
  "name": "Trust Checker",
  "version": "1.0.0",
  "description": "Check websites against Trustpilot ratings and reviews",
  "permissions": ["activeTab", "tabs"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  }
}
